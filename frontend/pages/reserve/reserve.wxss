/* pages/reserve/reserve.wxss */
.container {
    padding-top: 30rpx;
    width: 100vw;
    min-height: calc(100vh - 30rpx);
    background: #ebebeb;
}

.dates-container {
    box-sizing: border-box;
    text-align: center;
    margin: auto;
    padding: 30rpx;
    width: 85%;
    border: #d4317a 4rpx solid;
    border-radius: 20rpx;
    background: #ffffff;
    box-shadow: 0rpx 5rpx 10rpx rgba(240, 194, 214, .6);
    white-space: nowrap;
}

.date-container {
    display: inline-block;
    padding: 0 15rpx 0 15rpx;
}

.date-day {
    padding-bottom: 10rpx;
    width: 130rpx;
    font-size: 32rpx;
}

.date-date {
    box-sizing: border-box;
    width: 130rpx;
    height: 130rpx;
    background: linear-gradient(#ab2f74, #d23c7e);
    border-radius: 50%;
    font-size: 65rpx;
    line-height: 130rpx;
    color: #ffffff;
}

.date-data__selected {
    border: #d4317a 4rpx solid;
    background: #ffffff;
    line-height: 126rpx;
    color: #d4317a;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
