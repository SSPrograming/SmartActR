/* pages/reserve/reserve.wxss */
.container {
    /* 大小 */
    padding-top: 40rpx;
}

.equipment-info-container {
    /* 位置 */
    display: flex;
    /* 大小 */
    width: 592rpx;
    padding: 30rpx;
    margin: auto;
    /* 文字 */
    font-size: 32rpx;
    /* 背景 */
    background: #ffffff;
    border: #bb3479 4rpx solid;
    /* CSS3 */
    box-shadow: 0rpx 5rpx 10rpx rgba(240, 194, 214, .6);
    border-radius: 20rpx;
}

.equipment-info-content {
    /* 大小 */
    flex: 1;
    margin-right: 20rpx;
}

.equipment-info-name,
.equipment-info-id,
.equipment-info-description {
    /* 位置 */
    display: flex;
}

.label {
    /* 大小 */
    min-width: 160rpx;
}

.equipment-info-image-containter {
    /* 位置 */
    display: flex;
    flex-direction: column;
}

.equipment-info-image {
    /* 大小 */
    width: 220rpx;
    height: 160rpx;
}

.whitespace {
    /* 大小 */
    flex: 1;
}

.delimeter {
    /* 大小 */
    padding: 10rpx 0 10rpx 60rpx;
    margin-top: 40rpx;
    /* 文字 */
    color: #ffffff;
    /* 背景 */
    background: linear-gradient(#a52d72, #cf3c7e);
}

.time-available-container {
    /* 位置 */
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    /* 大小 */
    width: 600rpx;
    margin: auto;
}

.time-available {
    /* 大小 */
    width: 222rpx;
    height: 60rpx;
    padding: 0 30rpx;
    margin-top: 30rpx;
    /* 文字 */
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    /* 背景 */
    background: #ffffff;
    border: #bb3479 4rpx solid;
    /* CSS3 */
    border-radius: 32rpx;
}
